<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHistoryLight"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/item_box"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:text="Item name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/item" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/img_item"
            android:background="@drawable/delete_like_btn_style" />

        <Button
            android:layout_toLeftOf="@id/btn_delete"
            android:layout_centerVertical="true"
            android:id="@+id/btn_like_it"
            android:layout_width="30dp"
            android:layout_marginRight="10dp"
            android:layout_height="30dp"
            android:background="@drawable/big_heart_btn_style"/>

    </RelativeLayout>

</RelativeLayout>