<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <!-- 开始颜色="" 结束颜色="" 颜色渐变="" -->
            <gradient android:endColor="@color/colorPrimaryDarker" android:startColor="@color/colorPrimaryDarker" />
            <!-- 边缘颜色 按钮四个圆角="" -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</selector>